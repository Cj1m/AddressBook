<!-- Add Organisation Modal -->
  <div id="addOrganisationModal" class="modal">
    <div class="modal-content">
      <h4>Add an organisation</h4>

      <div class="row">
        <form class="col s12">
          <div class="row modal-form-row">
            <div class="input-field col s12">
              <input id="form_add_organisation_name" type="text" class="validate">
              <label for="form_add_organisation_name">Name</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="form_add_organisation_email" type="text" class="validate">
              <label for="form_add_organisation_email">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <textarea id="form_add_organisation_phone" type="text" class="materialize-textarea validate"></textarea>
              <label for="form_add_organisation_phone">Phone</label>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="modal-footer">
      <a id="addOrganisationSubmit" class="modal-action modal-close waves-effect waves-green btn-flat">Submit</a>
    </div>
  </div>
